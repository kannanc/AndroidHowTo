<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <TextView android:id="@+id/name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignRight="@+id/addr1"
              android:layout_alignBaseline="@+id/nameText"
              android:text="Name"/>

    <EditText android:id="@id/nameText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/name"/>

    <TextView android:id="@id/addr1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/nameText"
              android:layout_alignBaseline="@+id/addrText"
              android:text="Address"/>

    <EditText android:id="@id/addrText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/addr1"
              android:layout_below="@id/nameText"
            />

    <Button android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/addrText"
            android:text="Cancel"
            android:layout_below="@id/addrText"/>

    <Button android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_toLeftOf="@id/cancel"
                android:layout_below="@id/addrText"/>

</RelativeLayout>
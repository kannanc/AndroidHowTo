<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/tbl"
             xmlns:android="http://schemas.android.com/apk/res/android"
                 android:shrinkColumns="2"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <TableRow android:id="@+id/r0">
        <Button android:id="@+id/home"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:onClick="goHome"
                android:layout_span="3"
                android:text="Home"/>
    </TableRow>
    <TableRow android:id="@+id/r1">
        <TextView android:id="@+id/tv1"
                  android:text="I Span across columns"
                  android:gravity="center_horizontal"
                  android:layout_span="3"
                  android:background="@color/DullBlue"/>
    </TableRow>

    <TableRow android:id="@+id/r2">
        <TextView android:id="@+id/tv2"
                  android:text="second row col 1"
                  android:background="@color/LightRed"/>
        <TextView android:id="@+id/tv3"
                  android:layout_column="2"
                  android:text="Start at col 3 instead of 2"
                  android:background="@color/DullBlue"/>
    </TableRow>
    <TableRow android:id="@+id/r3">
        <TextView android:id="@+id/tv4"
                  android:text="third row col 1"
                  android:layout_width="wrap_content"
                  android:background="@color/DullBlue"/>
        <TextView android:id="@+id/tv5"
                  android:text="third row col 2"
                  android:background="@color/LightRed"/>
        <TextView android:id="@+id/tv6"
                  android:text="third row with a much larger column "
                  android:background="@color/DullBlue"/>
    </TableRow>

</TableLayout>